  <!-- main circular body -->
  <circle cx="50.5" cy="47.5" r="30" fill="url(#g1)" />
  <!-- inner ring for depth -->
  <circle cx="50.5" cy="47.5" r="22" fill="#3B1F12" opacity="0.08" />

  <!-- centered R letter -->
  <text x="50.5" y="56" text-anchor="middle" alignment-baseline="middle" class="rust-text" fill="#FFFFFF">R</text>

